{
  "name": "spacecraft checklist",
  "description": "a nerdy test checklist",
  "rule_groups": [
    {
      "name": "standard",
      "rules": [
        {
          "Name": "id",
          "Type": "text",
          "Required": "mandatory"
        },
        {
          "Type": "number",
          "Required": "mandatory",
          "Allow Multiple" : "no",
          "Valid units": [
            "person"
          ]
        },
        {
          "Name": "crew_capacity",
          "Type": "number",
          "Required": "mandatory",
          "Allow Multiple" : "no"
        },
        {
          "Name": "class",
          "Type": "text",
          "Required": "mandatory",
          "Allow Multiple" : "no"
        },
        {
          "Name": "role",
          "Type": "limited value",
          "Required": "mandatory",
          "Allow Multiple" : "no",
          "Valid values": [
            "transport",
            "warship"
          ]
        },
        {
          "Name": "color",
          "Type": "limited value",
          "Required": "optional",
          "Allow Multiple" : "max 2",
          "Valid values": [
            "red",
            "yellow",
            "blue"
          ]
        },
        {
          "Name": "length",
          "Type": "number",
          "Required": "optional",
          "Allow Multiple" : "no",
          "Valid units": [
            "km",
            "m"
          ]
        },
        {
          "Name": "instruction",
          "Type": "doi",
          "Required": "optional",
          "Allow Multiple": "yes"
        },
        {
          "Name": "Availability",
          "Type": "limited value",
          "Required": "recommended",
          "Allow Multiple": "no",
          "Example": "mailto:vdc-internal@ebi.ac.uk",
          "Valid values": [
            "no longer available",
            "mailto:a.valid@email"
          ]
        },
        {
          "Name": "video demo",
          "Type": "uri",
          "Required": "optional",
          "Allow Multiple": "yes"
        },
        {
          "Name": "production date",
          "Type": "date",
          "Required": "optional",
          "Allow Multiple": "no",
          "Valid units": [
            "YYYY-MM-DD",
            "YYYY-MM"
          ]
        },
        {
          "Name": "manufacturer country",
          "Type": "ontology_id",
          "Required": "recommended",
          "Allow Multiple": "no",
          "Valid terms": [
            {
              "ontology_name": "NCIT",
              "label": "France",
              "term": "NCIT_C16592",
              "include_root": 1,
              "term_iri": "http://purl.obolibrary.org/obo/NCIT_C16592",
              "allow_descendants": 0
            },
            {
              "include_root": 1,
              "label": "Switzerland",
              "term": "NCIT_C17181",
              "ontology_name": "NCIT",
              "allow_descendants": 0,
              "term_iri": "http://purl.obolibrary.org/obo/NCIT_C17181"
            },
            {
              "allow_descendants": 0,
              "term_iri": "http://purl.obolibrary.org/obo/NCIT_C16903",
              "ontology_name": "NCIT",
              "term": "NCIT_C16903",
              "label": "Netherlands",
              "include_root": 1
            },
            {
              "ontology_name": "NCIT",
              "include_root": 1,
              "term": "NCIT_C16636",
              "label": "Germany",
              "term_iri": "http://purl.obolibrary.org/obo/NCIT_C16636",
              "allow_descendants": 0
            },
            {
              "term_iri": "http://purl.obolibrary.org/obo/NCIT_C16761",
              "allow_descendants": 0,
              "ontology_name": "NCIT",
              "include_root": 1,
              "term": "NCIT_C16761",
              "label": "Italy"
            },
            {
              "include_root": 1,
              "term": "NCIT_C16699",
              "label": "Hungary",
              "ontology_name": "NCIT",
              "term_iri": "http://purl.obolibrary.org/obo/NCIT_C16699",
              "allow_descendants": 0
            },
            {
              "term_iri": "http://purl.obolibrary.org/obo/NCIT_C17233",
              "allow_descendants": 0,
              "include_root": 1,
              "term": "NCIT_C17233",
              "label": "United Kingdom",
              "ontology_name": "NCIT"
            }
          ]
        }
      ]
    },
    {
      "name": "warships",
      "condition": {
        "attribute_value_match": {
          "role": "warship"
        }
      },
      "rules": [
        {
          "Name": "weapon",
          "Type": "text",
          "Required": "mandatory",
          "Allow Multiple": "yes"
        }
      ]
    },
    {
      "name": "transports",
      "condition": {
        "attribute_value_match": {
          "role": "transport"
        }
      },
      "rules": [
        {
          "Name": "cargo_capacity",
          "Type": "number",
          "Allow Multiple" : "no",
          "Required": "mandatory",
          "Valid units": [
            "kg"
          ]
        }
      ]
    },
    {
      "name": "dummy transport",
      "condition": {
        "attribute_value_match": {
          "role": "transport",
          "driver": "robot"
        }
      },
      "rules": [
        {
          "Name": "robot_model",
          "Type": "text",
          "Allow Multiple" : "no",
          "Required": "mandatory"
        }
      ]
    }
  ]
}